<div class="box info-box w-fit">
  <div class="box-header with-border bg-green-700 h-12">
    <h4 class="box-title text-warning">Pending Records</h3>
  </div>

  <div class="box-body">
    <table class="table table-sm table-bordered table-striped table-hover">
      <thead class="bg-gray-100">
        <tr class="border-b">
          <td class="px-4 py-2">Pending Number Of EMI today</td> 
          <td class="px-4 py-2"><%= @emi %></td>
        </tr> 
        <tr class="border-b">
          <td class="px-4 py-2">Pending Amount Of EMI today</td> 
          <td class="px-4 py-2"><%= @emi_amount %></td>
        </tr> 
        <tr class="border-b">
          <td class="px-4 py-2">Pending Number Of EMI Till today</td> 
          <td class="px-4 py-2"><%= @pending_emi %></td>
        </tr> 
        <tr class="border-b">
          <td class="px-4 py-2">Pending Amount Of EMI Till today</td> 
          <td class="px-4 py-2"><%= @pending_emi_amount %></td>
        </tr> 
        <tr class="border-b">
          <td class="px-4 py-2">Total Active Customer</td> 
          <td class="px-4 py-2"><%= @active_customer %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>
